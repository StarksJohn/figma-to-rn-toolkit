{
  "name": "figma-to-rn-toolkit",
  "version": "1.2.0",
  "description": "🎨 A comprehensive toolkit for converting Figma designs to React Native components with MCP (Model Context Protocol) support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "figma-to-rn": "dist/cli.js",
    "figma-mcp": "dist/mcp-cli.js"
  },
  "files": [
    "dist",
    "src",
    "examples",
    "README.md",
    "README_en.md",
    "README_zh.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "prebuild": "rimraf dist",
    "dev": "ts-node src/index.ts",
    "cli": "ts-node cli.ts",
    "mcp": "ts-node mcp-cli.ts",
    "mcp:connect": "ts-node mcp-cli.ts connect",
    "mcp:status": "ts-node mcp-cli.ts status",
    "mcp:generate": "ts-node mcp-cli.ts generate-selection",
    "mcp:context": "ts-node mcp-cli.ts context",
    "mcp:interactive": "ts-node mcp-cli.ts interactive",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:mcp": "ts-node test-mcp.ts",
    "demo": "ts-node demo.ts",
    "demo:mcp": "ts-node examples/mcp-usage.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm run test",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "readme:en": "cp README_en.md README.md",
    "readme:zh": "cp README_zh.md README.md",
    "readme:check": "echo 'Available README versions: README.md (current), README_en.md (English), README_zh.md (Chinese)'"
  },
  "keywords": [
    "figma",
    "react-native",
    "design-system",
    "code-generation",
    "mcp",
    "model-context-protocol",
    "ui-toolkit",
    "design-to-code",
    "automation",
    "typescript"
  ],
  "author": {
    "name": "Figma to RN Toolkit Contributors",
    "email": "support@figma-to-rn-toolkit.com",
    "url": "https://github.com/figma-to-rn-toolkit/figma-to-rn-toolkit"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/figma-to-rn-toolkit/figma-to-rn-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/figma-to-rn-toolkit/figma-to-rn-toolkit/issues"
  },
  "homepage": "https://github.com/figma-to-rn-toolkit/figma-to-rn-toolkit#readme",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-native": ">=0.65.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "commander": "^11.1.0",
    "dotenv": "^17.2.1",
    "eventsource": "^2.0.2"
  },
  "devDependencies": {
    "@types/eventsource": "^1.1.15",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  }
}
